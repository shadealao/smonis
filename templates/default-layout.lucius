/* the parent div of .aligned-radio */
.field-aligned-radio {
    display: flex;
}

.field-aligned-radio > label {
    align-self: end;
}

/* ------------------------------------------------------------ */
/* global layout */
.container {
    width: auto;
    padding-left: 15px;
    padding-right: 15px;
}

.contenu {
    position: relative;
    overflow: auto;
    font-size: 17px;
}

.vertical-center {
  top: 50%;
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.alert-info {
    position:fixed;
    z-index: 999;
    width: 100vw;
